<idea-plugin version="2">
	<id>org.ideaflow</id>
	<name>Idea Flow</name>
	<description>Idea Flow Mapping Tool</description>
	<version>0.24</version>
	<vendor>New Iron Group, Inc.</vendor>

	<!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
	<idea-version since-build="107.105"/>

	<application-components>
		<component>
			<implementation-class>com.ideaflow.intellij.IdeaFlowApplicationComponent</implementation-class>
		</component>
	</application-components>

	<project-components>
		<component>
			<implementation-class>com.ideaflow.intellij.IdeaFlowProjectComponent</implementation-class>
		</component>
	</project-components>

	<actions>
		<action id="IdeaFlow.Note" class="com.ideaflow.intellij.action.ifm.CreateEventNoteAction" text="Create Event Note"
		        description="Create an event note in the active IdeaFlow" icon="/icons/note.png">
		</action>
		<action id="IdeaFlow.ToggleConflict" class="com.ideaflow.intellij.action.ifm.ToggleConflict"
		        icon="/icons/conflict.png">
		</action>
		<action id="IdeaFlow.ToggleLearning" class="com.ideaflow.intellij.action.ifm.ToggleLearning"
		        icon="/icons/learning.png">
		</action>
		<action id="IdeaFlow.ToggleRework" class="com.ideaflow.intellij.action.ifm.ToggleRework"
		        icon="/icons/rework.png">
		</action>
		<action id="IdeaFlow.TogglePause" class="com.ideaflow.intellij.action.ifm.TogglePause"
		        icon="/icons/pause.png">
		</action>

		<action id="IdeaFlow.NewIFMFile" class="com.ideaflow.intellij.action.meta.NewIfmFileAction"
		        text="IFM File" description="Create a new IFM file">
			<add-to-group group-id="NewGroup" anchor="last"/>
		</action>

		<action id="IdeaFlow.OpenInBrowser" class="com.ideaflow.intellij.action.meta.OpenInVisualizerAction" text="Open Visualizer"
		        description="Open the active IdeaFlow in the Visualizer" icon="/icons/browse.png">
			<add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
		</action>

		<action id="IdeaFlow.SwitchActive" class="com.ideaflow.intellij.action.meta.SwitchIdeaFlowComboBox"/>


		<group id="com.ideaflow" text="IdeaFlow Group" description="IdeaFlow action group">
			<add-to-group group-id="MainToolBar" anchor="first"/>
			<reference ref="IdeaFlow.TogglePause"/>
			<reference ref="IdeaFlow.SwitchActive"/>
			<reference ref="IdeaFlow.Note"/>
			<reference ref="IdeaFlow.ToggleConflict"/>
			<reference ref="IdeaFlow.ToggleLearning"/>
			<reference ref="IdeaFlow.ToggleRework"/>
			<separator/>
		</group>
	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<fileTypeFactory implementation="com.ideaflow.intellij.file.IdeaFlowMapFileTypeLoader"/>
        <applicationConfigurable instance="com.ideaflow.intellij.settings.IdeaSettings"/>
	</extensions>
</idea-plugin>
