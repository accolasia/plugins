<idea-plugin version="2">
	<id>org.openmastery.ideaflow</id>
	<name>Idea Flow</name>
	<description>Idea Flow Mapping Tool</description>
	<version>0.2</version>
	<vendor>New Iron Group, Inc.</vendor>
	<depends>com.intellij.modules.platform</depends>
	<depends>com.intellij.modules.lang</depends>


	<!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
	<idea-version since-build="107.105"/>

	<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
		 on how to target different products -->
	<!-- TODO: verify this is accurate; compile against a rubymine platform sdk and make sure everything works -->
	<depends>com.intellij.modules.lang</depends>

	<application-components>
		<component>
			<implementation-class>org.openmastery.ideaflow.intellij.IdeaFlowApplicationComponent</implementation-class>
		</component>
	</application-components>

	<project-components>
		<component>
			<implementation-class>org.openmastery.ideaflow.intellij.IdeaFlowProjectComponent</implementation-class>
		</component>
	</project-components>

	<actions>
		<action id="IdeaFlow.Subtask" class="com.ideaflow.intellij.action.ifm.CreateSubtaskNote" text="Start a subtask..."
				description="Mark the beginning of a subtask in the active IdeaFlow" icon="/icons/note.png">
		</action>
		<action id="IdeaFlow.WTF" class="com.ideaflow.intellij.action.ifm.CreateWTFNote" text="WTF?!"
				description="Mark the start of confusion (unexpected observation) in the active IdeaFlow" icon="/icons/pain.png">
		</action>
		<action id="IdeaFlow.Awesome" class="com.ideaflow.intellij.action.ifm.CreateAwesomeNote" text="YAY!"
				description="Celebrate the success of solving a hard problem!" icon="/icons/awesome.png">
		</action>
		<action id="IdeaFlow.TogglePause" class="com.ideaflow.intellij.action.ifm.TogglePause"
		        icon="/icons/pause.png">
		</action>
<!--
		<action id="IdeaFlow.OpenInBrowser" class="com.ideaflow.intellij.action.meta.OpenInVisualizerAction" text="Open Visualizer"
		        description="Open the active IdeaFlow in the Visualizer" icon="/icons/browse.png">
			<add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
		</action>

-->
		<action id="IdeaFlow.SwitchActive" class="com.ideaflow.intellij.action.meta.SwitchIdeaFlowComboBox"/>

		<group id="org.openmastery" text="IdeaFlow Group" description="IdeaFlow action group">
			<add-to-group group-id="MainToolBar" anchor="first"/>
			<reference ref="IdeaFlow.TogglePause"/>
			<reference ref="IdeaFlow.SwitchActive"/>
			<reference ref="IdeaFlow.Subtask"/>
			<reference ref="IdeaFlow.WTF"/>
			<reference ref="IdeaFlow.Awesome"/>
			<separator/>
		</group>

	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<applicationService serviceImplementation="org.openmastery.ideaflow.intellij.settings.IdeaFlowSettings"/>
		<applicationConfigurable instance="org.openmastery.ideaflow.intellij.settings.IdeaFlowSettingsPage"/>
	</extensions>

</idea-plugin>
