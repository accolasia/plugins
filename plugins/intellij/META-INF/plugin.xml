<idea-plugin version="2">
	<id>org.ideaflow</id>
	<name>Idea Flow</name>
	<description>Idea Flow Mapping Tool</description>
	<version>0.7</version>
	<vendor>New Iron Group, Inc.</vendor>

	<!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
	<idea-version since-build="107.105"/>

	<application-components>
	</application-components>

	<project-components>
		<component>
			<implementation-class>com.ideaflow.intellij.IdeaFlowComponent</implementation-class>
		</component>
	</project-components>

	<actions>
		<action id="IdeaFlow.Note" class="com.ideaflow.intellij.action.CreateEventNoteAction" text="Create Event Note"
		        description="Create an event note on the active IdeaFlow map" icon="/icons/note.png">
		</action>
		<action id="IdeaFlow.ToggleConflict" class="com.ideaflow.intellij.action.ToggleConflict"
		        icon="/icons/conflict.png">
		</action>
		<action id="IdeaFlow.ToggleLearning" class="com.ideaflow.intellij.action.ToggleLearning"
		        icon="/icons/learning.png">
		</action>
		<action id="IdeaFlow.ToggleRework" class="com.ideaflow.intellij.action.ToggleRework"
		        icon="/icons/rework.png">
		</action>
		<action id="IdeaFlow.TogglePause" class="com.ideaflow.intellij.action.TogglePause"
		        icon="/icons/pause.png">
		</action>
		<action id="IdeaFlow.ToggleOpenIdeaFlow" class="com.ideaflow.intellij.action.ToggleOpenIdeaFlow"
		        icon="/icons/record.png">
			<add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
		</action>

		<action id="IdeaFlow.OpenInBrowser" class="com.ideaflow.intellij.action.OpenInBrowserAction" text="Open IFM in Browser"
		        description="Open the currently selected IdeaFlow map in preferred browser" icon="/icons/ideaflow.png">
			<add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
		</action>

		<group id="com.ideaflow" text="IdeaFlow Group" description="IdeaFlow action group">
			<add-to-group group-id="MainToolBar" anchor="first"/>
			<reference ref="IdeaFlow.ToggleOpenIdeaFlow"/>
			<reference ref="IdeaFlow.TogglePause"/>
			<reference ref="IdeaFlow.ToggleConflict"/>
			<reference ref="IdeaFlow.ToggleLearning"/>
			<reference ref="IdeaFlow.ToggleRework"/>
			<reference ref="IdeaFlow.Note"/>
			<separator/>
		</group>
	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<fileTypeFactory implementation="com.ideaflow.intellij.file.IdeaFlowMapFileTypeLoader"/>
	</extensions>
</idea-plugin>
