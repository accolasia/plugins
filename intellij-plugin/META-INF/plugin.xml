<idea-plugin version="2">
	<id>org.openmastery.ideaflow</id>
	<name>Idea Flow</name>
	<description>Idea Flow Mapping Tool</description>
	<version>0.1</version>
	<vendor>New Iron Group, Inc.</vendor>

	<!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
	<idea-version since-build="107.105"/>

	<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
		 on how to target different products -->
	<!-- TODO: verify this is accurate; compile against a rubymine platform sdk and make sure everything works -->
	<depends>com.intellij.modules.lang</depends>

	<application-components>
		<component>
			<implementation-class>org.openmastery.ideaflow.intellij.IdeaFlowApplicationComponent</implementation-class>
		</component>
	</application-components>

	<project-components>
		<component>
			<implementation-class>org.openmastery.ideaflow.intellij.IdeaFlowProjectComponent</implementation-class>
		</component>
	</project-components>

	<actions>
		<action id="IdeaFlow.Note" class="com.ideaflow.intellij.action.ifm.CreateEventNote" text="Create Event Note"
				description="Create an event note in the active IdeaFlow" icon="/icons/note.png">
		</action>
		<action id="IdeaFlow.ToggleConflict" class="com.ideaflow.intellij.action.ifm.ToggleConflict"
		        icon="/icons/conflict.png">
		</action>
		<action id="IdeaFlow.ToggleLearning" class="com.ideaflow.intellij.action.ifm.ToggleLearning"
		        icon="/icons/learning.png">
		</action>
		<action id="IdeaFlow.ToggleRework" class="com.ideaflow.intellij.action.ifm.ToggleRework"
		        icon="/icons/rework.png">
		</action>
		<action id="IdeaFlow.ToggleRecord" class="com.ideaflow.intellij.action.ifm.ToggleRecord"
		        icon="/icons/record.png">
		</action>
<!--
		<action id="IdeaFlow.OpenInBrowser" class="com.ideaflow.intellij.action.meta.OpenInVisualizerAction" text="Open Visualizer"
		        description="Open the active IdeaFlow in the Visualizer" icon="/icons/browse.png">
			<add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
		</action>

-->
		<action id="IdeaFlow.SwitchActive" class="com.ideaflow.intellij.action.meta.SwitchIdeaFlowComboBox"/>

		<group id="org.openmastery" text="IdeaFlow Group" description="IdeaFlow action group">
			<add-to-group group-id="MainToolBar" anchor="first"/>
			<reference ref="IdeaFlow.ToggleRecord"/>
			<reference ref="IdeaFlow.SwitchActive"/>
			<reference ref="IdeaFlow.Note"/>
			<reference ref="IdeaFlow.ToggleConflict"/>
			<reference ref="IdeaFlow.ToggleLearning"/>
			<reference ref="IdeaFlow.ToggleRework"/>
			<separator/>
		</group>

	</actions>

	<extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="org.openmastery.ideaflow.intellij.settings.IdeaFlowSettings"/>
	</extensions>

</idea-plugin>
