<idea-plugin version="2">
	<id>org.openmastery.ideaflow</id>
	<name>Idea Flow</name>
	<description>Idea Flow Mapping Tool</description>
	<version>0.10</version>
	<vendor>New Iron Group, Inc.</vendor>
	<depends>com.intellij.modules.platform</depends>
	<depends>com.intellij.modules.lang</depends>


	<!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
	<idea-version since-build="107.105"/>

	<!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
		 on how to target different products -->
	<!-- TODO: verify this is accurate; compile against a rubymine platform sdk and make sure everything works -->
	<depends>com.intellij.modules.lang</depends>

	<application-components>
		<component>
			<implementation-class>org.openmastery.ideaflow.intellij.IdeaFlowApplicationComponent</implementation-class>
		</component>
	</application-components>

	<project-components>
		<component>
			<implementation-class>org.openmastery.ideaflow.intellij.IdeaFlowProjectComponent</implementation-class>
		</component>
	</project-components>

	<actions>
		<action id="org.openmastery.ideaflow.Subtask" class="com.ideaflow.intellij.action.ifm.CreateSubtaskNote" text="Start a subtask..."
				description="Mark the beginning of a subtask in the active IdeaFlow" icon="/icons/subtask.png">
		</action>
		<action id="org.openmastery.ideaflow.Note" class="com.ideaflow.intellij.action.ifm.CreateProgressNote" text="Create a progress note..."
				description="Take notes as you make progress through a subtask" icon="/icons/sub_sub_task.png">
		</action>
		<action id="org.openmastery.ideaflow.Distraction" class="com.ideaflow.intellij.action.ifm.CreateDistractionNote" text="Recent disruption..."
				description="Mark a recent (prior) distraction that took you away from the task" icon="/icons/distraction.png">
		</action>

		<action id="org.openmastery.ideaflow.Pain" class="com.ideaflow.intellij.action.ifm.CreatePainNote" text="WTF?!"
				description="Mark the start of confusion (unexpected observation)" icon="/icons/pain.png">
		</action>
		<action id="org.openmastery.ideaflow.Awesome" class="com.ideaflow.intellij.action.ifm.CreateAwesomeNote" text="YAY!"
				description="Celebrate the success of solving the problem!" icon="/icons/awesome.png">
		</action>

		<action id="org.openmastery.ideaflow.PainSnippet" class="com.ideaflow.intellij.action.ifm.CreatePainSnippet" text="WTF?! I'm confused..."
				description="Mark selected text as the place of confusion (unexpected observation)" icon="/icons/pain.png">
		</action>

		<action id="org.openmastery.ideaflow.AwesomeSnippet" class="com.ideaflow.intellij.action.ifm.CreateAwesomeSnippet" text="YAY! I found the answer..."
				description="Mark selected text as important to resolving confusion" icon="/icons/awesome.png">
		</action>

		<action id="org.openmastery.ideaflow.TogglePause" class="com.ideaflow.intellij.action.ifm.TogglePause"
		        icon="/icons/pause.png">
		</action>
<!--
		<action id="IdeaFlow.OpenInBrowser" class="com.ideaflow.intellij.action.meta.OpenInVisualizerAction" text="Open Visualizer"
		        description="Open the active IdeaFlow in the Visualizer" icon="/icons/browse.png">
			<add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
		</action>

-->
		<action id="org.openmastery.ideaflow.SwitchActive" class="com.ideaflow.intellij.action.meta.SwitchIdeaFlowComboBox"/>

		<group id="org.openmastery.ideaflow.MainToolBar" text="IdeaFlow Group" description="IdeaFlow action group">
			<add-to-group group-id="MainToolBar" anchor="first"/>
			<reference ref="org.openmastery.ideaflow.TogglePause"/>
			<reference ref="org.openmastery.ideaflow.SwitchActive"/>
			<reference ref="org.openmastery.ideaflow.Subtask"/>
			<reference ref="org.openmastery.ideaflow.Note"/>
			<reference ref="org.openmastery.ideaflow.Distraction"/>
			<reference ref="org.openmastery.ideaflow.Pain"/>
			<reference ref="org.openmastery.ideaflow.Awesome"/>
			<separator/>
		</group>

		<group id="org.openmastery.ideaflow.EditorPopupMenu">
			<add-to-group group-id="EditorPopupMenu" anchor="last"/>
			<separator/>
			<reference ref="org.openmastery.ideaflow.PainSnippet"/>
			<reference ref="org.openmastery.ideaflow.AwesomeSnippet"/>
		</group>

	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<applicationService serviceImplementation="org.openmastery.ideaflow.intellij.settings.IdeaFlowSettings"/>
		<applicationConfigurable instance="org.openmastery.ideaflow.intellij.settings.IdeaFlowSettingsPage"/>
	</extensions>

</idea-plugin>
